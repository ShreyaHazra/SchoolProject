@model IEnumerable<SchoolWork.Models.CreateExamSchedule>
@*@model SchoolWork.Models.CreateExamSchedule*@


<h2>NoticeBoard</h2>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/CSS/StyleSheet1.css" rel="stylesheet" />
    <link href="~/CSS/Table.css" rel="stylesheet" />
    <style>
        .text-danger {
            font-weight: 700;
            color: red;
        }
    </style>


</head>

<body id="LoginForm" style="background-color:gainsboro;padding:10px;">
    @*<div class="container" >*@
    <h1 class="form-heading"></h1>
    <br />
    <br />
    <br />
    <br />
    @*<div class="login-form">
        <div class="body-div" style="border:1px solid black;background-color:gainsboro; max-width:100%">*@

    <h1 style="color:green; margin-top:-30px; text-align:center"><b>EXAM SCHEDULE LISTING</b></h1>
    <br />

    @if (TempData["msg"] != null)
    {
        <p class="alert alert-success" id="successMessage" style="color:#5cb85c;text-align:center">@TempData["msg"]</p>
    }

    <h3 style="text-align:right;margin-top:-15px">

        <input type="button" value="Home" class="btn btn-success" onclick="@("window.location.href='" + @Url.Action("AdminHeaderBoard", "DashBoard") + "'");" />

        <input type="button" onclick="history.go(-1)" value="Return" class="btn btn-success" />

    </h3>
 

    @using (Html.BeginForm("SchoolRegister", "SchoolRegistration", FormMethod.Post, new { id = "myID", name = "randform" }))

    {          

        <table class="table" id="products">
            <thead>
                <tr>
                    <th>@Html.DisplayName("Id")</th>
                    <th>@Html.DisplayName("School Code")</th>
                    <th>@Html.DisplayName("Exam Term Name")</th>
                    <th>@Html.DisplayName("Year")</th>
                    <th>@Html.DisplayName("Class Name")</th>
                    <th>@Html.DisplayName("Subject Name")</th>
                    <th>@Html.DisplayName("Exam Day")</th>
                    <th>@Html.DisplayName("Exam Date")</th>
                    <th>@Html.DisplayName("Start Time")</th>
                    <th>@Html.DisplayName("End Time")</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{ var i = 1;
                }
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@Html.DisplayFor(modelItem => i)</td>

                            <td>@Html.DisplayFor(modelItem => item.School_Code)</td>
                        <td>@Html.DisplayFor(modelItem => item.Exm_Term_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Year)</td>
                        <td>@Html.DisplayFor(modelItem => item.Class)</td>
                        <td>@Html.DisplayFor(modelItem => item.Subject_Namee)</td>
                        <td>@Html.DisplayFor(modelItem => item.Day_Namee)</td>
                        <td>@Html.DisplayFor(modelItem => item.Exam_Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Start_Time)</td>
                        <td>@Html.DisplayFor(modelItem => item.End_Time)</td>
                        <td>


                            @Html.ActionLink("Edit", "Edit", new { id = item.ExamTerm_Id }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })

                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>

    }


    @section Scripts
   {
        @Scripts.Render("~/bundles/jqueryval")
        <!-- DataTables CSS -->

        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.5/css/jquery.dataTables.css">

        <!-- jQuery -->
        <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-1.10.2.min.js"></script>

        <!-- DataTables -->
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.5/js/jquery.dataTables.js">
        </script>

        <script type="text/javascript" charset="utf8">
            $(document).ready(function () {
                $('#products').DataTable();
            });
        </script>
    }
</body>



</html>
