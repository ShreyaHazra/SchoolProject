@model SchoolWork.Models.RoleAssigned

@using (Html.BeginForm("RoleAssigned", "SchoolAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div id="Education" class="tabcontent">

        <br />
        <h3>Educational Information</h3>
        <p>Please Fill Up All necessary Information mentioned in below Fields.</p>
        <div class="container">

            <div class="row">

                <div class="col-sm-3">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        @Html.DropDownListFor(m => m.Emp_Code, Model.Emp_Name, "Please Select An Employee", new { @class = "form-control" })

                    </div>

                    @Html.ValidationMessageFor(m => m.Emp_Code, "", new { @class = "text-danger" })
                </div>

                <div class="col-sm-3">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        @Html.DropDownListFor(m => m.Sub_ID, Model.Sub_Name, "Please Select A Subject", new { @class = "form-control" })

                    </div>

                    @Html.ValidationMessageFor(m => m.Sub_ID, "", new { @class = "text-danger" })
                </div>
                <div class="col-sm-3">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        @Html.DropDownListFor(m => m.Class_ID, Model.Class_ID, "Please Select A Class", new { @class = "form-control", multiple = "multiple" })

                    </div>

                    @Html.ValidationMessageFor(m => m.Class_ID, "", new { @class = "text-danger" })
                </div>
                <div class="col-sm-3">
                    <img src="../AppFiles/Images/plus.jpg" onclick="addDiv()" height="35" width="35">
                </div>
            </div>
            <br>
            <br>

        </div>

            <div class="container" id="addDiv">
                <input type="hidden" id="noofsub" name="noofsub">
            </div>




        <ul class="list-unstyled list-inline pull-right">
            <li><input type="submit" value="Assign" id="btReload" class="btn btn-success" /></li>
        </ul>

    </div>

}

