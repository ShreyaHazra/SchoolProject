        <div class="body-div" style="border:1px solid black;background-color:gainsboro; max-width:100%">*@

    <h1 style="color:green; margin-top:-30px; text-align:center"><b>CLASS INFORMATION  LISTING</b></h1>
    <br />
    @*if (Session["School_Name"] != null)
        {<p style="font-size:20px;text-align:center">
                <b>Hi</b><b style="font-size:20px;color:darkcyan;-webkit-text-stroke: 1px black;"> @Session["School_Name"] </b>
            </p>
            <h1>Hi  @Session["School_Code"] </h1><h1>Hi  @Session["School_Id"] </h1>
        }*@


    @if (TempData["msg"] != null)
    {
        <p class="alert alert-success" id="successMessage" style="color:#5cb85c;text-align:center">@TempData["msg"]</p>
    }

        <h3 style="text-align:right;margin-top:-15px">
            <a class="btn btn-primary btn-product" onclick="@("window.location.href='" + @Url.Action("SchoolRoutineData", "SchoolAdmin") + "'");"><span class="glyphicon glyphicon-pencil"></span>Add Routine Information</a>
            <input type="button" value="Home" id="s1" class="btn btn-success" onclick="@("window.location.href='" + @Url.Action("AdminHeaderBoard", "DashBoard") + "'");" />

            <input type="button" onclick="history.go(-1)" id="s1" value="Return" class="btn btn-success" />


        </h3>

    @using (Html.BeginForm("SchoolRegister", "SchoolRegistration", FormMethod.Post, new { id = "myID", name = "randform" }))

    {

        <table class="table" id="products">
            <thead>
                <tr>
                    <th>@Html.DisplayName("Routine_Id")</th>
                    <th>@Html.DisplayName("School Name")</th>
                    <th>@Html.DisplayName("School Code")</th>
                    <th>@Html.DisplayName("Class Start Time")</th>
                    <th>@Html.DisplayName("Class End Time")</th>
                    <th>@Html.DisplayName("Class Name")</th>
                    <th>@Html.DisplayName("Section Name")</th>
                    <th>@Html.DisplayName("Teacher Name")</th>
                    <th>@Html.DisplayName("Subject Name")</th>
                    <th>@Html.DisplayName("Subject Code")</th>
                    <th>@Html.DisplayName("Room Number")</th>
                    <th>@Html.DisplayName("Day")</th>
                    <th>@Html.DisplayName("Period_Name")</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Routine_Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.School_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.School_Code)</td>
                        <td>@Html.DisplayFor(modelItem => item.Start_Time)</td>
                        <td>@Html.DisplayFor(modelItem => item.End_Time)</td>

                        <td>@Html.DisplayFor(modelItem => item.Class_Namee)</td>

                        <td>@Html.DisplayFor(modelItem => item.Section_Namee)</td>
                        <td>@Html.DisplayFor(modelItem => item.Employee_Namee)</td>

                        <td>@Html.DisplayFor(modelItem => item.Subject_Namee)</td>
                        <td>@Html.DisplayFor(modelItem => item.Subject_Code)</td>
                        <td>@Html.DisplayFor(modelItem => item.Room_Namee)</td>
                        <td>@Html.DisplayFor(modelItem => item.Day_Namee)</td>
                        <td>@Html.DisplayFor(modelItem => item.Period_Namee)</td>
                        @*  <td>@Html.DisplayFor(modelItem => item.Employee_Mobile_Number)</td>
                            <td>@Html.DisplayFor(modelItem => item.Employee_Alt_Number)</td>
                            <td>@Html.DisplayFor(modelItem => item.Employee_DOB)</td>*@

                        <td>

                            @Html.ActionLink("Details", "UpdateEmployeeDetails", new { id = item.Employee_Id })

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    @*</div>*@
    @*</div>
        </div>*@

