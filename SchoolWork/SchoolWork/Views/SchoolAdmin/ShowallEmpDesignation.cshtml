@model IEnumerable<SchoolWork.Models.SchoolEmpTypeMaster>


<h2>NoticeBoard</h2>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/CSS/StyleSheet1.css" rel="stylesheet" />
    <link href="~/CSS/Table.css" rel="stylesheet" />
    <style>
        .text-danger {
            font-weight: 700;
            color: red;
        }

        .btn {
            max-width: 100%;
            text-align: center;
        }
    </style>


</head>

<body id="LoginForm" style="background-color:gainsboro;padding:10px;">
    @*<div class="container" >*@
    <h1 class="form-heading"></h1>
    <br />
    <br />
    <br />
    <br />
    @*<div class="login-form">
        <div class="body-div" style="border:1px solid black;background-color:gainsboro; max-width:100%">*@

    <h1 style="color:green; margin-top:-30px; text-align:center"><b>EMPLOYEE DESIGNATION LISTING</b></h1>
    <br />

    @if (TempData["msg"] != null)
    {
        <p class="alert alert-success" id="successMessage" style="color:#5cb85c;text-align:center">@TempData["msg"]</p>
    }

        <h3 style="text-align:right;margin-top:-15px">
            <a class="btn btn-primary btn-product" onclick="@("window.location.href='" + @Url.Action("SchoolEmpTypeMaster", "SchoolAdmin") + "'");"><span class="glyphicon glyphicon-pencil"></span>Add New Designation</a>
            <input type="button" value="Home" class="btn btn-info" onclick="@("window.location.href='" + @Url.Action("AdminHeaderBoard", "DashBoard") + "'");" />
         
            <input type="button" onclick="history.go(-1)" value="Return" class="btn btn-info" />

        </h3>

    @using (Html.BeginForm("ShowallEmpDesignation", "SchoolAdmin", FormMethod.Post, new { id = "myID", name = "randform" }))

    {

        <table class="table" id="products">
            <thead>
                <tr>
                    <th>@Html.DisplayName("Id")</th>
                    <th>@Html.DisplayName("School Code")</th>
                    <th>@Html.DisplayName("School Name")</th>
                    <th>@Html.DisplayName("Designation Name")</th>
                    <th>@Html.DisplayName("User Type")</th>

                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Type_Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.School_Code)</td>
                        <td>@Html.DisplayFor(modelItem => item.School_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.EmpType_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Type_Name)</td>
                        <td>
                            <div class="btn">
                                <p>
                                    @Html.ActionLink("Details", "", new { id = item.Type_Id }, new { @class = "btn btn-warning btn-sm btn-block", @type = "button" })
                                </p>

                                <p>
                                    @Html.ActionLink("Assign WorkRole", "EmployeeWorkRole", new { id = item.Type_Id }, new { @class = "btn btn-success btn-sm btn-block", @type = "button" })
                                </p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    @*</div>*@
    @*</div>
        </div>*@

    @section Scripts
   {
        @Scripts.Render("~/bundles/jqueryval")
        <!-- DataTables CSS -->

        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.5/css/jquery.dataTables.css">

        <!-- jQuery -->
        <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-1.10.2.min.js"></script>

        <!-- DataTables -->
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.5/js/jquery.dataTables.js">
        </script>

        <script type="text/javascript" charset="utf8">
            $(document).ready(function () {
                $('#products').DataTable();
            });
        </script>
    }
</body>



</html>