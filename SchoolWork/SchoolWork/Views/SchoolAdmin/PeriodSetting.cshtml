                            </th>
                            <th>
                                @Html.Display("Start Time")
                            </th>
                            <th>
                                @Html.Display("End Time")
                            </th>
                            <th>
                                @Html.Display("Duration")
                            </th>
                            
                        </tr>
                    </table>
                   
                </div><!---End of table div-->

                <div class="col-sm-12 col-md=12 col-md-offset-10">
                    <input type="button" value="Save" class="btn btn-success" onclick="addall()" id="saveall" />
                    &nbsp;&nbsp;
                    <input type="button" value="Delete" class="btn btn-warning">
                </div>
                <div class="clearfix"></div>
            </div>
            <!-- GRAPH ROW END-->
        </div>
