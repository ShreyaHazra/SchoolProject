
@model SchoolWork.Models.StartPage
@{
    ViewBag.Title = "StudentIndexPage";
}

<html lang="en">
<head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/CSS/stylesheet2.css" rel="stylesheet" />
    <style>
        .text-danger {
            font-weight: 700;
            color: red;
        }

        .glyphicon {
            font-size: 30px;
            color: #16E736;
            padding: 10px;
            -webkit-text-stroke: 1px black;
        }

        .col-sm-5 {
            border: 2px solid #3F72F0;
            padding: 10px;
            margin: 10px;
            border-radius: 30px;
        }
    </style>

</head>
<body id="LoginForm" style="background-color:cadetblue">
    <div class="container">
        <h1 class="form-heading"></h1>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="login-form">
            <div class="body-div" style="background-color:aliceblue; max-width:60%">

                <h1 style="color:#C70039; margin-top:-30px;-webkit-text-stroke: 1px black;"><b>SCHOOL ADMIN DASHBOARD </b></h1>



                @if (TempData["msg"] != null)
                {
                    <p class="alert alert-success" id="successMessage" style="color:orangered">@TempData["msg"]</p>
                }
                

                <br>


                <div class="row">
                    <div class="col-sm-5">
                        <div class="input-group">
                            <span class="glyphicon glyphicon-off"></span>


                            @Html.ActionLink("New Registration", "StudentRegisterBoard", "StudentDetail")
                        </div>
                    </div>


                    <div class="col-sm-5">
                        <div class="input-group">
                            <span class="glyphicon glyphicon-off"></span>

                            Already Have a Account!
                            @Html.ActionLink("Sign-In Here", "StudentLogin", "StudentDetail")

                        </div>
                    </div>


                    <br />
                </div>







                <br>


            </div>
        </div>
        <br />
        <br />
    </div>
    @section Scripts
    {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>
</html>

<script type="text/javascript">


    var colors = ['#FFFF', '#FFFF', '#FFFF', '#FFFF'];

        i = 0;

    $(".body-div").click(function () {
        $(".body-div").css("backgroundColor", colors[i++]);
        if (i >= colors.length)
            i = 0;

    });

</script>
